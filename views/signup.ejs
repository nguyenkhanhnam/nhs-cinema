    <div class="container" style="margin-left: auto; margin-right: auto; width: 500px;">
      <form ref='uploadForm' id='uploadForm' action='/api/user/signup' method='post'>
        <h1 class="text-center">SIGN UP</h1>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="username" name="username" required>
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="form-group">
          <label for="confirm_passwor">Re-enter password</label>
          <input type="password" class="form-control" id="confirm_password" name="confirm_password" required oninput="validatePassword()">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-user-plus fa-lg" aria-hidden="true"></i> Sign up</button>
        </div>
      </form>
