    <title>Sign up</title>

    <body>
        <div id="header">
            <img id="logo" class="img-responsive" src="/images/favicon.png" alt="Logo of Cinema">
            <h1 id="application-name">CINEMA APPLICATION</h1>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="/">
                                    <i class="fa fa-home fa-lg" aria-hidden="true"></i>
                                </a>
                            </li>
                            <!--<li>
                              <form class="navbar-form navbar-left">
                                  <div class="form-group">
                                      <input type="text" class="form-control" placeholder="Search">
                                  </div>
                                  <button type="submit" class="btn btn-default">Search</button>
                              </form>
                          </li>-->
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/movie/createMovie">
                                    <i class="fa fa-upload" aria-hidden="true"></i> CREATE NEW MOVIE</a>
                            </li>
                            <li>
                                <a href="/signout">
                                    <i class="fa fa-sign-out fa-lg" aria-hidden="true"></i> SIGN OUT</a>
                            </li>
                            <!--<li>
                              <a href="/signin">
                                  <i class="fa fa-sign-in" aria-hidden="true"></i> SIGN IN</a>
                          </li>
                          <li>
                              <a href="/signup">
                                  <i class="fa fa-user-plus" aria-hidden="true"></i> SIGN UP</a>
                          </li>-->
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </div>
        <div class="container">
            <form ref='uploadForm' id='uploadForm' action='/api/user/signup' method='post'>
                <h1 class="text-center row">USER PROFILE</h1>
                <form>
                    <div class="col-sm" style="width: 50%">
                        <h3 class="text-center">Personal Information</h3>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="email" class="form-control" id="email" disabled placeholder="Email address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username">User name</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-address-card fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="username" placeholder="User Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone number</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone-square fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="phone" placeholder="Phone number">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Profile picture</label>
                            <br>
                            <div class="text-center">
                                <image style="border-radius: 50%; width: 100px; height: 100px; display: inline;" class="img-responsive" id="cover" src="/images/cover.png"></image>
                                <input style="display: none;" type="file" id="uploadFile" name="sampleFile" required="required">
                                <!-- <p class="help-block">Example block-level help text here.</p> -->
                                <button type="button" id="uploadButton" class="btn btn-primary my-btn" onClick="uploadImage()">
                                    <i class="fa fa-file-image-o fa-lg"></i> Chọn hình minh họa</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm" style="width: 50%">
                        <h3 class="text-center">Social network</h3>
                        <div class="form-group">
                            <label for="facebook">Facebook</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="facebook" placeholder="Facebook">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="google">Google+ ID</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-google-plus-square fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="google" placeholder="Google+ ID">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="skype">Skype</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-skype fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="skype" placeholder="Skype">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="website">Website/Blog</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-external-link fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="website" placeholder="Website/Blog">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="twitter">Twitter</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-twitter-square fa-lg" aria-hidden="true"></i>
                                </span>
                                <input type="text" class="form-control" id="twitter" placeholder="Twitter">
                            </div>
                        </div>
                    </div>


                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in fa-lg" aria-hidden="true"></i> Save</button>
                    </div>
                </form>
        </div>
    </body>

</html>