<!DOCTYPE html>
<html ng-app="app.movies">

<% include ./share/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/list-movie.css">
    <link rel="stylesheet" href="/stylesheets/create-movie.css">
    <script src="/javascripts/services/svMovies.js"></script>
    <script src="/javascripts/create-movie.js"></script>

    <title>Create new movie</title>

    <body ng-controller="movieController">
        <div id="header">
            <img id="logo" class="img-responsive" src="/images/favicon.png" alt="Logo of Cinema">
            <h1 id="application-name">CINEMA APPLICATION</h1>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="/">
                                    <i class="fa fa-home fa-lg" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li>
                                <form class="navbar-form navbar-left">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                    </div>
                                    <button type="submit" class="btn btn-default">Search</button>
                                </form>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/movie/createMovie">
                                    <i class="fa fa-upload" aria-hidden="true"></i> CREATE NEW MOVIE</a>
                            </li>
                            <li>
                                <a href="/signin">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i> SIGN IN</a>
                            </li>
                            <li>
                                <a href="/signup">
                                    <i class="fa fa-user-plus" aria-hidden="true"></i> SIGN UP</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </div>
        <form ref='uploadForm' id='uploadForm' action='/api/movie/createMovie' method='post' encType="multipart/form-data">
            <div class="container-fluid">

                <h1 id="main" class="text-center">CREATE NEW MOVIE</h1>

                <div class="container form-group col-lg-5 text-center">
                    <image class="img-responsive" id="cover" src="/images/cover.png"></image>
                    <input type="file" id="uploadFile" name="sampleFile" required="required">
                    <!-- <p class="help-block">Example block-level help text here.</p> -->
                    <button type="button" id="uploadButton" class="btn btn-primary my-btn" onClick="uploadImage()">
                        <i class="fa fa-file-image-o fa-lg"></i> Chọn hình minh họa</button>
                </div>

                <div class="container col-lg-7">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required="required">
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre</label>
                        <select class="form-control" id="genre" name="genre">
                            <option label={{genre}} value={{genre}} ng-repeat="genre in genres">{{genre}}</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="release">Release Date</label>
                        <div id="release" class="form-inline">
                            <select class="form-control" id="month" name="month">
                                <option label={{month}} value={{months.indexOf(month)}} ng-repeat="month in months| limitTo : 12 : 1 ">{{month}}</option>
                            </select>
                            <select class="form-control" id="year" name="year">
                                <option label={{year}} value={{year}} ng-repeat="year in years">{{year}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" type="textarea" class="form-control" id="description" rows="5" placeholder="Điền thông tin thêm về bộ phim, như diễn viên chính, nội dung bộ phim,..."
                            required="required"></textarea>
                    </div>
                </div>

            </div>
            <div class="text-center">


                <button type="submit" class="btn btn-primary my-btn">
                    <i class="fa fa-upload fa-lg"></i> Upload Movie</button>
                <button type="button" class="btn btn-primary my-btn">
                    <i class="fa fa-sign-in fa-lg"></i> You need sign in</button>
            </div>
        </form>
    </body>

</html>