<!DOCTYPE html>
<html ng-app="app.movies">

<% include ./share/head.ejs %>

    <link rel="stylesheet" href="/stylesheets/movie-detail.css">
    <script src="/javascripts/services/svMovies.js"></script>
    <script src="/javascripts/movie-detail.js"></script>
    <style>
        html, body {
  height: 100%;
}
.wrapper {
  min-height: 100%;
  margin-bottom: -50px;
  padding-bottom: 50px;
}

.navbar {
  background-color: green;
  background: green;
  color: white;
}

li {
  color: #fff;
}

a { 
  font-size: 20px;
  color: #fff !important; 
  margin-left: 20px;
}

#header {
  display: block;
}

#footer {
  width: 100%;
  text-align: center;
  height: 20px;
}

#logo {
  height: 100px;
  width: 100px;
  object-fit: cover;
  margin: 1px;
  display: inline;
}

#application-name {
  text-transform: uppercase;
  float: right;
  color: green;
  font-weight: bolder;
}
    </style>
    <title>Movie detail</title>

    <body ng-controller="movieController">
        <div id="header">
            <img id="logo" class="img-responsive" src="/images/favicon.png" alt="Logo of Cinema">
            <h1 id="application-name">CINEMA APPLICATION</h1>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="/">
                                    <i class="fa fa-home fa-lg" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li>
                                <form class="navbar-form navbar-left">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                    </div>
                                    <button type="submit" class="btn btn-default">Search</button>
                                </form>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <!--<li>
                                        <a href="/movie/createMovie">
                                            <i class="fa fa-upload" aria-hidden="true"></i> CREATE NEW MOVIE</a>
                                    </li>-->
                            <li>
                                <a href="/signin">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i> SIGN IN</a>
                            </li>
                            <li>
                                <a href="/signup">
                                    <i class="fa fa-user-plus" aria-hidden="true"></i> SIGN UP</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </div>
        <div class="container">
            <div class="container">
                <h1 class="text-center title">{{movie.title}}</h1>
                <div class="container col-lg-4 movie text-center">
                    <image class="img-responsive cover" src={{movie.cover}}>
                </div>
                <div class="container col-lg-8 info">
                    <h4>Genre: {{movie.genre}}</h4>
                    <h4>Release date: {{movie.release}}</h4>
                    <h4>Description:</h4>
                    <p>{{movie.description}}</p>
                </div>
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-primary" onClick="history.back()">
                    <i class="fa fa-arrow-circle-left fa-lg"></i> Back</button>
            </div>
        </div>


    </body>


</html>