<!DOCTYPE html>
<html ng-app="app.movies">

<% include ./share/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/list-movie.css">
    <script src="/javascripts/list-movie.js"></script>
    <!--<script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>-->
    <title>Cinema</title>

    <body ng-controller="movieController">
        <!--<button onClick="meow()">Meow</button>-->
        <header>
            <% include ./share/header.ejs %>
        </header>
        <div class="wrapper">
            <div class="container">
                <!-- Tooltip: data-toggle="tooltip"
                    id="movie" title="<h3>{{movie.title}}</h3> <p>Genre: {{movie.genre}} </p> <p>Description: {{movie.description}}</p>"
                    data-placement="bottom" -->
                <div class="container col-lg-4 movie text-center" ng-repeat="movie in movies" ng-click="getDetail(movie._id)" data-toggle="tooltip"
                id="movie" title="<h3>{{movie.title}}</h3><h4>({{movie.release}})</h4>  <p>Genre: {{movie.genre}} </p> <p>Description: {{movie.description}}</p>"
                data-placement="auto right">
                    <image class="img-responsive cover" src={{movie.cover}}>
                        <h2 class="info">
                            {{movie.title}}
                        </h2>
                </div>
            </div>
        </div>
        <footer>
            <% include ./share/footer.ejs %>
        </footer>
    </body>

</html>